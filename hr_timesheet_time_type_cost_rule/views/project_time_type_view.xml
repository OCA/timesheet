<odoo>
    <record id="view_project_time_type_form" model="ir.ui.view">
        <field name="name">project.time.type.form</field>
        <field name="model">project.time.type</field>
        <field
            name="inherit_id"
            ref="hr_timesheet_time_type.view_project_time_type_form"
        />
        <field name="arch" type="xml">
            <sheet position="inside">
                <group>
                    <field name="apply_cost_rules" />
                    <field
                        name="cost_rule_ids"
                        attrs="{'invisible': [('apply_cost_rules', '=', False)]}"
                    >
                        <tree>
                            <field name="sequence" widget="handle" />
                            <field name="cost_rule_type" />
                            <field name="display_value" />
                        </tree>
                    </field>
                </group>
            </sheet>
        </field>
    </record>
</odoo>
