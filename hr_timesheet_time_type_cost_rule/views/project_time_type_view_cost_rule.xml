<odoo>
    <record id="view_project_time_type_cost_rule_form" model="ir.ui.view">
        <field name="name">project.time.type.cost.rule.form</field>
        <field name="model">project.time.type.cost.rule</field>
        <field name="arch" type="xml">
            <form string="Time Type Cost Rule">
                <sheet>
                    <group>
                        <field name="cost_rule_type" />
                        <field
                            name="fixed_cost"
                            attrs="{'invisible': [('cost_rule_type', '!=', 'fixed')]}"
                        />
                        <field
                            name="ratio_value"
                            attrs="{'invisible': [('cost_rule_type', '!=', 'ratio')]}"
                        />
                        <field
                            name="domain"
                            widget="domain"
                            options="{'model': 'hr.employee'}"
                        />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
