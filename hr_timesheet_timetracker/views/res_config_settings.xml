    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.hr_timesheet_timetracker</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_timesheet.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_timesheet']" position="inside">
                <div name="section_timetracker">
                    <h2>Timetracker</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="timetracker_rounding_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="timetracker_rounding_enabled"/>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." role="img" aria-label="Values set here are company-specific." groups="base.group_multi_company"/>
                                <div class="text-muted" attrs="{'invisible': [('timetracker_rounding_enabled', '=', False)]}">
                                    Configure how rounding is applied, as well as ensure Time Encoding is configured correctly.
                                </div>
                                <div class="content-group" attrs="{'invisible': [('timetracker_rounding_enabled', '=', False)]}">
                                    <div class="row mt16">
                                        <label string="Started At" for="timetracker_started_at_rounding" class="col-lg-3 o_light_label"/>
                                        <field name="timetracker_started_at_rounding"/>
                                    </div>
                                    <div class="row">
                                        <label string="Stopped At" for="timetracker_stopped_at_rounding" class="col-lg-3 o_light_label"/>
                                        <field name="timetracker_stopped_at_rounding"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
