<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_timesheet_employee_inherit_form" model="ir.ui.view">
        <field name="name">view.hr.timesheet.employee.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_timesheet.hr_employee_view_form_inherit_timesheet"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='timesheet']/div" position="after">
                <field name="allow_timesheet_for"/>
            </xpath>
        </field>
    </record>
</odoo>
