<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_task_timesheet_inherit" model="ir.ui.view">
        <field name="name">view.project.task.inherit.timesheet</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="timesheet_emp_ids" invisible="1"/>
            </field>
            <field name="employee_id" position="attributes">
                <attribute name="domain">[('id','in',timesheet_emp_ids)]</attribute>
            </field>
        </field>
    </record>
</odoo>
