<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.sale_timesheet_order_line_no_update
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99" />
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']" position="inside">
                <h2>Project Sale Task</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="project_sale_task_time"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        name="project_sale_task_time_cfg"
                    >
                        <div class="o_setting_left_pane">
                            <field name="default_hide_original_sol" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="default_hide_original_sol" />
                        </div>
                    </div>
                </div>

                <div
                    class="row mt16 o_settings_container"
                    name="select_all_project_sale_items"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        name="select_all_project_sale_items_cfg"
                    >
                        <div class="o_setting_left_pane">
                            <field name="default_select_all_project_sale_items" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="default_select_all_project_sale_items" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
