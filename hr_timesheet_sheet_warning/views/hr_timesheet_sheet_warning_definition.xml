<odoo>

    <record id="hr_timesheet_sheet_warning_definition_tree" model="ir.ui.view">
        <field name="name">hr_timesheet.sheet.warning.definition.tree</field>
        <field name="model">hr_timesheet.sheet.warning.definition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="active" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="hr_timesheet_sheet_warning_definition_form" model="ir.ui.view">
        <field name="name">hr_timesheet.sheet.warning.definition.form</field>
        <field name="model">hr_timesheet.sheet.warning.definition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Inactive"
                        bg_color="bg-warning"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="active" />
                        <field
                            name="warning_domain"
                            widget="domain"
                            options="{'model': 'hr_timesheet.sheet', 'in_dialog': true}"
                        />
                        <field name="python_code" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_timesheet_sheet_warning_definition_search" model="ir.ui.view">
        <field name="name">hr_timesheet.sheet.warning.definition.search</field>
        <field name="model">hr_timesheet.sheet.warning.definition</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <separator />
                <filter
                    string="Inactive"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
            </search>
        </field>
    </record>

    <record
        id="hr_timesheet_sheet_warning_definition_action"
        model="ir.actions.act_window"
    >
        <field name="name">Timesheet Warning Definitions</field>
        <field name="res_model">hr_timesheet.sheet.warning.definition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="timesheet_menu_warning_definitions"
        name="Warnings"
        parent="hr_timesheet.hr_timesheet_menu_configuration"
        action="hr_timesheet_sheet_warning_definition_action"
        groups="hr_timesheet.group_hr_timesheet_approver"
        sequence="80"
    />

    <menuitem
        id="timesheet_menu_settings"
        name="Settings"
        parent="hr_timesheet.hr_timesheet_menu_configuration"
        action="hr_timesheet.hr_timesheet_config_settings_action"
        groups="base.group_system"
        sequence="85"
    />

</odoo>
