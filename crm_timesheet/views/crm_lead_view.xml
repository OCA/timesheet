<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Both -->
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">CRM - Leads with timesheets</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <!-- Main task form action buttons -->
            <div name="button_box" position="inside">
                <field invisible="1" name="show_time_control" />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-play-circle text-success"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    string="Start work"
                    type="object"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-stop-circle text-warning"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    type="object"
                />
            </div>
            <!-- New fields -->
            <field name="user_id" position="after">
                <field invisible="1" name="project_id" />
                <field
                    groups="hr_timesheet.group_hr_timesheet_user"
                    name="project_id"
                /></field>
            <page name="extra" position="after">
                <page groups="hr_timesheet.group_hr_timesheet_user" string="Timesheet">
                    <field invisible="1" name="timesheet_ids" />
                    <field
                        context="{'default_project_id': project_id, 'default_user_id': uid, 'tree_view_ref': 'hr_timesheet.timesheet_view_tree_user', 'form_view_ref': 'hr_timesheet.hr_timesheet_line_form'}"
                        groups="hr_timesheet.group_hr_timesheet_user"
                        name="timesheet_ids"
                    />
                </page>
            </page></field>
    </record>
    <!-- Leads -->
    <record id="view_crm_lead_kanban" model="ir.ui.view">
        <field name="name">Add timesheet time controls to lead kanban</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_lead_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_bottom_left')]" position="inside">
                <field invisible="1" name="show_time_control" />
                <a
                    class="o_kanban_inline_block text-success"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    string="Start work"
                    tabindex="-1"
                    type="object"
                >
                    <i class="fa fa-lg fa-play-circle" title="Start" />
                </a>
                <a
                    class="o_kanban_inline_block text-warning"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    tabindex="-1"
                    type="object"
                >
                    <i class="fa fa-lg fa-stop-circle" title="Stop" />
                </a>
            </xpath></field>
    </record>
    <record id="crm_case_tree_view_leads" model="ir.ui.view">
        <field name="name">Add timesheet time controls to lead tree</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field invisible="1" name="show_time_control" />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-play-circle text-success"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    string="Start work"
                    tabindex="-1"
                    type="object"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-stop-circle text-warning"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    tabindex="-1"
                    type="object"
                />
            </tree></field>
    </record>
    <!-- Opportunities -->
    <record id="crm_case_kanban_view_leads" model="ir.ui.view">
        <field name="name">Add timesheet time controls to opportunity kanban</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_bottom_left')]" position="inside">
                <field invisible="1" name="show_time_control" />
                <a
                    class="o_kanban_inline_block text-success"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    string="Start work"
                    tabindex="-1"
                    type="object"
                >
                    <i class="fa fa-lg fa-play-circle" title="Start" />
                </a>
                <a
                    class="o_kanban_inline_block text-warning"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    tabindex="-1"
                    type="object"
                >
                    <i class="fa fa-lg fa-stop-circle" title="Stop" />
                </a>
            </xpath></field>
    </record>
    <record id="crm_case_tree_view_oppor" model="ir.ui.view">
        <field name="name">Add timesheet time controls to opportunity tree</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
        <field name="arch" type="xml">
            <tree position="inside">
                <field invisible="1" name="show_time_control" />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-play-circle text-success"
                    invisible="show_time_control != 'start'"
                    name="button_start_work"
                    string="Start work"
                    tabindex="-1"
                    type="object"
                />
                <button
                    class="oe_stat_button"
                    groups="hr_timesheet.group_hr_timesheet_user"
                    icon="fa-stop-circle text-warning"
                    invisible="show_time_control != 'stop'"
                    name="button_end_work"
                    string="Stop work"
                    tabindex="-1"
                    type="object"
                />
            </tree></field>
    </record>
</odoo>
